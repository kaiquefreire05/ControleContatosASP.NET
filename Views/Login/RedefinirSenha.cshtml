@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}

<!-- Mensagem de erro -->
@if (TempData["MensagemErro"] != null)
{
    <!-- Alert Erro -->
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}
<br />

<!-- Formuário de Login -->
<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">

    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        <div id="loginHelp" class="form-text">Nunca compartilhe seu login com ninguém</div>
        @Html.ValidationMessageFor(x => x.Login)  <!-- Se campo for nulo mostrar mensagem de erro -->
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" id="email">
        @Html.ValidationMessageFor(x => x.Email)  <!-- Se campo for nulo mostrar mensagem de erro -->
    </div>

    <!-- Botão entrar e voltar -->
    <button type="submit" class="btn btn-primary btn-block">Redefinir Senha</button>
    <a class="btn btn-secondary btn-block" asp-action="IndexLogin" asp-controller="Login" role="button">Voltar</a>

</form>

